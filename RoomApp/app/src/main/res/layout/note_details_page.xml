<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <Button
        android:id="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/back"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_arrow_square_left_svgrepo_com"
        />
    <EditText
        android:id="@+id/et_note_text"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:lines="6"
        android:hint="@string/enter_text_note"
        android:gravity="top|start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:background="@drawable/rectangle_circle"
        />
    <Button
        android:id="@+id/btn_save_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_note_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/grey"
        android:text="@string/save"/>



</androidx.constraintlayout.widget.ConstraintLayout>